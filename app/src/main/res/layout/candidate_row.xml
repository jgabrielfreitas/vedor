<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/partyImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_pstu" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_space_default"
            android:layout_marginLeft="@dimen/half_space_default"
            android:layout_toEndOf="@+id/partyImageView"
            android:layout_toRightOf="@+id/partyImageView"
            android:text="Suzi Rego Grande"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/favoriteCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nameTextView"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginRight="@dimen/half_space_default"
            android:button="@drawable/checkbox_star" />

        <TextView
            android:id="@+id/partyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_marginLeft="@dimen/half_space_default"
            android:layout_toEndOf="@+id/partyImageView"
            android:layout_toRightOf="@+id/partyImageView"
            android:text="PSTU - 16"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partyTextView"
            android:layout_marginLeft="@dimen/half_space_default"
            android:layout_toEndOf="@+id/partyImageView"
            android:layout_toRightOf="@+id/partyImageView"
            android:layout_marginBottom="@dimen/half_space_default"
            android:text="Suplente"
            android:textSize="13sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>